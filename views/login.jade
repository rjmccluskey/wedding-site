extends layout
append head
    link(rel="stylesheet", href="stylesheets/background.css")

block content
    form#login(action="/login", method="POST", class="pure-form pure-g")
        div(class="pure-u-1-4 pure-u-md-1-3")
        div(class="pure-u-1-2 pure-u-md-1-3")
            input.pure-input-1(type="text", name="password", placeholder="Enter the code")
            input.pure-input-1(type="submit", value="Go!")
            if message
                p.error=message
        div(class="pure-u-1-4 pure-u-md-1-3")
